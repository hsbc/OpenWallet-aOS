<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.fragment.wallet.detail.WalletSuccessRedeemFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_330dp"
                android:src="@drawable/nft_success"
                app:layout_constraintTop_toBottomOf="@+id/title" />


            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.DisplayEmphasized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:text="Success!" />

            <TextView
                android:id="@+id/text1"
                style="@style/TextAppearance.BodyEmphasized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:text="Thank you for joining  on this NFT journey!" />

            <TextView
                android:id="@+id/text2"
                style="@style/TextAppearance.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:lineSpacingMultiplier="1.3"
                android:text="You have requested redemption of your Gold Gift and have also intiated the creation of an NFT for . Delivery of the Gold Gift may take some time, so thank you for your patience." />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextAppearance.BodyEmphasized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                tools:text="Ahmad MUhammad" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                style="@style/TextAppearance.BodyEmphasized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:text="+971 2628 0000" />

            <TextView
                android:id="@+id/text4"
                style="@style/TextAppearance_Body_Expandable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:lineSpacingMultiplier="1.3"
                android:text="If you have any questions related to your redemption, please contact your relationship manager." />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


